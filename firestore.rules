rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is super admin
    function isSuperAdmin() {
      return request.auth != null && request.auth.token.email == 'superadmin@gmail.com';
    }
    
    // Admins collection - authenticated users can read (needed to check admin status)
    // Allow unauthenticated read for pending admin verification
    // Super admin can write, authenticated users can update their own status to active
    match /admins/{adminDoc} {
      allow read: if true; // Allow unauthenticated read for first-time login
      allow create, delete: if request.auth != null && isSuperAdmin();
      allow update: if request.auth != null && 
                      (isSuperAdmin() || 
                       (request.auth.token.email == resource.data.email && 
                        resource.data.status == 'pending'));
    }
    
    // Admins auth collection - stores admin user data
    match /admins_auth/{adminId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == adminId;
      allow update, delete: if request.auth != null && 
                      (isSuperAdmin() || request.auth.uid == adminId);
    }
    
    // Users collection - regular users
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if request.auth != null && 
                               (request.auth.uid == userId || isSuperAdmin());
    }
    
    // Destinations collection - admins can manage, users can read
    match /destinations/{destinationId} {
      allow read: if true; // Public read access
      allow create, update, delete: if request.auth != null; // Authenticated admins can write
    }
    
    // Preferences collection - admins can manage, users can read
    match /preferences/{preferenceId} {
      allow read: if true; // Public read access for user-facing preference display
      allow create, update, delete: if request.auth != null; // Authenticated admins can write
    }
    
    // Trip Plans collection - users can manage their own, admins can read all
    match /tripPlans/{planId} {
      allow read: if request.auth != null; // Authenticated users and admins can read
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && 
                               (request.auth.uid == resource.data.userId || isSuperAdmin());
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
